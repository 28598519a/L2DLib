<Window x:Class="L2DSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:L2DSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="450" WindowStartupLocation="CenterScreen">

    <Grid>
        <local:MouseTrackView x:Name="RenderView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,120"/>
        <GroupBox Header="제어판" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Bottom" Height="80">
            <Grid>
                <Button x:Name="BtnLoad" Click="BtnLoad_Click" Content="모델 불러오기" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Height="30" Margin="15,0,0,0"/>
                <Button x:Name="BtnReset" Click="BtnReset_Click" Content="모든 리소스 해제" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="30" Margin="120,0,0,0"/>
                <Button x:Name="BtnMotion" Click="BtnMotion_Click" Content="무작위 모션 재생" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="30" Margin="245,0,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
